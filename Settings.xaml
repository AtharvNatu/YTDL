<Window x:Class="YTDL.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YTDL"
        mc:Ignorable="d"
         Style="{StaticResource MaterialDesignWindow}"
        Title="Download Settings" Height="600" Width="800" HorizontalAlignment="Center" VerticalAlignment="Center" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <RadioButton x:Name="newRadioButton" Content="Ask Where To Save Each Video Before Downloading" HorizontalAlignment="Left" Margin="30,212,0,0" VerticalAlignment="Top" GroupName="SaveOption"/>
        <Button Content="Apply" HorizontalAlignment="Left" Margin="243,260,0,0" VerticalAlignment="Top" Click="SetDownloadLocationHandler"/>
        <GroupBox Header="GroupBox" Margin="20,88,294,272">
            <RadioButton x:Name="defaultRadioButton" Content="Set Default Download Directory" HorizontalAlignment="Left" Margin="0,26,0,0" VerticalAlignment="Top" GroupName="SaveOption" />
        </GroupBox>

    </Grid>
</Window>
