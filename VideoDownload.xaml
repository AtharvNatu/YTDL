<Window x:Class="YTDL.VideoDownload"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YTDL" xmlns:forms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        mc:Ignorable="d"
        Style="{StaticResource MaterialDesignWindow}"
        Title="Download Video" Height="550" Width="800" HorizontalAlignment="Center" VerticalAlignment="Center" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" ShowInTaskbar="False">
    <Grid>
        <ComboBox x:Name="audioComboBox" HorizontalAlignment="Left" Margin="517,340,0,0" VerticalAlignment="Top" Width="180" FontSize="14" Height="30" MaxDropDownHeight="500"/>
        <ComboBox x:Name="videoComboBox" HorizontalAlignment="Left" Margin="517,179,0,0" VerticalAlignment="Top" FontSize="14" MaxDropDownHeight="500" Width="180" Height="30" Style="{DynamicResource MaterialDesignComboBox}"/>
        <Border HorizontalAlignment="Left" Height="178" Margin="76,163,0,0" VerticalAlignment="Top" Width="324" BorderThickness="1,1,1,1" CornerRadius="5,5,5,5" >
            <Image x:Name="thumbnail" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Button Content="Download Video" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="55" Width="158" Click="Button_Click" Margin="0,0,0,20" Background="#FF7393B3" BorderBrush="Black"/>
        <Label Content="Video Quality" HorizontalAlignment="Left" Margin="549,139,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.021,-0.068" Height="33" FontSize="16" FontWeight="Bold"/>
        <Label Content="Audio Quality" HorizontalAlignment="Left" Margin="550,298,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.021,-0.068" Height="34" FontSize="16" FontWeight="Bold"/>
        <Label x:Name="statusLbl" Content="" HorizontalAlignment="Center" Margin="0,397,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.021,-0.068" Height="33"/>
        <TextBlock x:Name="titleLabel" Text="Title" HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="0.021,-0.068" FontSize="20" FontWeight="Bold" TextWrapping="Wrap" TextAlignment="Center" Padding="20,20,20,20" Margin="0,10,0,0"/>
    </Grid>
</Window>
