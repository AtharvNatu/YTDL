<Window x:Class="YTDL.VideoDownload"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YTDL" xmlns:forms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        mc:Ignorable="d"
        Style="{StaticResource MaterialDesignWindow}"
        Title="Download Video" Height="600" Width="800" HorizontalAlignment="Center" VerticalAlignment="Center" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
    <Grid>
        <ComboBox x:Name="audioComboBox" HorizontalAlignment="Left" Margin="498,352,1,1" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="videoComboBox" HorizontalAlignment="Left" Margin="206,352,5,5" VerticalAlignment="Top" Width="120"/>
        <Border HorizontalAlignment="Left" Height="178" Margin="258,109,0,0" VerticalAlignment="Top" Width="323" BorderThickness="1,1,1,1" CornerRadius="5,5,5,5" >
            <Image x:Name="thumbnail" Stretch="UniformToFill"/>
        </Border>
        <Button Content="Download" HorizontalAlignment="Center" Margin="0,501,0,0" VerticalAlignment="Top" Height="55" Width="158" Click="Button_Click"/>
        <Label Content="Video Quality" HorizontalAlignment="Left" Margin="225,314,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.021,-0.068" Height="33"/>
        <Label Content="Audio Quality" HorizontalAlignment="Left" Margin="517,313,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.021,-0.068" Height="33"/>
        <ProgressBar x:Name="progressBar" HorizontalAlignment="Center" Height="29" Margin="0,435,0,0" VerticalAlignment="Top" Width="208"/>
        <Label x:Name="statusLbl" Content="" HorizontalAlignment="Center" Margin="0,397,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.021,-0.068" Height="33"/>
        

    </Grid>
</Window>
